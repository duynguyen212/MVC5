
@{
    Layout = null;
}

@model StudentDemo.Models.Student

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <form action="Index" method="post">
            <label>Student ID</label><input type="text" name="txtStudentID" />
            <label>Student Name</label><input type="text" name="txtName" />
            <input type="submit" name="btnSubmit" value="Submit" />
        </form>

        <br />
        @if (Model != null)
        {
            <h3>@Model.StudentId</h3>
            <h1>@Model.FullName</h1>
        }

    </div>
</body>
</html>
